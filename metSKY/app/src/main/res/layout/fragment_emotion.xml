<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup_outer_layout"
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.tifaniwarnita.metsky.EmotionFragment">

    <ImageView
        android:id="@+id/signup_logo_splash_metsky"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_splash_metsky" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:gravity="center">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bagaimana keadaan Anda sekarang?"
           android:layout_marginBottom="40dp"
           android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/emotion_twink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_twink"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"/>

            <ImageButton
                android:id="@+id/emotion_surprised"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_surprised"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"/>

            <ImageButton
                android:id="@+id/emotion_happy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_happy"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"/>

            <ImageButton
                android:id="@+id/emotion_flat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_flat"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"/>

            <ImageButton
                android:id="@+id/emotion_angry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_angry"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/template_clouds_bottom" />

</LinearLayout>
