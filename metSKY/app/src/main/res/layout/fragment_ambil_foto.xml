<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?baseColor"
    android:orientation="vertical"
    tools:context="com.tifaniwarnita.metsky.AmbilFotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ambilfoto_imageview_foto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="40dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ambilfoto_imagebutton_simpan"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_save_white_36px"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/ambilfoto_imagebutton_laporkan"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_send_white_36px"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:textColor="@android:color/white"
            android:text="Simpan"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:scaleType="centerInside"/>

        <TextView
            android:textColor="@android:color/white"
            android:text="Laporkan"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:scaleType="centerInside"/>

    </LinearLayout>
</LinearLayout>
